{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Commercial Auto Policy",
  "type": "object",
  "properties": {
    "policyNumber": {
      "type": "string"
    },
    "vehicles": {
      "type": "array",
      "items": {
        "type": "object",
        "items": {
          "type": "object",
          "properties": {
            "vehicleId": { "type": "string" },
            "make": { "type": "string" },
            "model": { "type": "string" },
            "year": { "type": "integer" },
            "VIN": { "type": "string" },
            "usage": { "type": "string" },
            "coverage": {
              "type": "object",
              "properties": {
                "collision": { "type": "boolean" },
                "comprehensive": { "type": "boolean" },
                "deductible": {
                  "type": "object",
                  "properties": {
                    "collision": { "type": "string" },
                    "comprehensive": { "type": "string" }
                  },
                  "required": ["collision", "comprehensive"]
                }
              }
            }
          }
        }
      },
      "required": [
        "vehicleId",
        "make",
        "model",
        "year",
        "VIN",
        "usage",
        "coverage"
      ]
    }
  }
}
